.background_image{
  width: 100%;
  filter: brightness(70%);
}
.wrapper {
  position: absolute;
  margin-left: 5%;
  /* margin: -250px 0 0 -250px; */
}   
.finger {
  background: center center no-repeat;
  margin: 0 0 0 -320px;
  animation: fingerHandle 1s ease infinite both;
}
@keyframes fingerHandle {
  0% {
      transform: none;
  }
  70% {
      transform: scale3d(1, .7, 1);
  }
  100% {
      transform: none;
  }
}
.word{
  color: white;
  position: relative;
  z-index: 99;
  text-align: center;
  font-size: 23rpx;
  /* color: whitesmoke; */
  left: 100rpx;
  bottom: 330rpx;
}